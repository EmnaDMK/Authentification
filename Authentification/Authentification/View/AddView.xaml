<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Authentification.View.AddView">
 

        <StackLayout Spacing="20" Padding="15">

            <Label Text="Name" FontSize="Small" />

            <Entry x:Name="Name" Text="{Binding Name}" FontSize="Small" />

            <Label Text="GSM" FontSize="Small" />

            <Entry x:Name="GSM" Text="{Binding GSM}" FontSize="Small" Margin="0" />

            <Button Text="Save" Command="{Binding SaveCommand}"></Button>
        <Label Text="{Binding nnn}"></Label>
        </StackLayout>

</ContentPage>