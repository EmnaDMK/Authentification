<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Authentification.View.Page2">
   
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
            <Image Source="{Binding Image}" HorizontalOptions="Start" HeightRequest="60"></Image>
                <StackLayout Orientation="Vertical">
                    <Entry Text="{Binding Name}"></Entry>
                    <Entry Text="{Binding GSM}"></Entry>
                    <Button Text="Update" Command="{Binding SaveCommandUp}"></Button>
                    <Button Text="Delete" Command="{Binding DeleteCommand}"></Button>
            </StackLayout>
            </StackLayout>
        </StackLayout>
  
</ContentPage>